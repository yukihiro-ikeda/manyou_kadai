<h1>タスク一覧</h1>
<ul>
<% @tasks.each do |task| %>
  <tr>
    <td>タスク名:<%= task.name %></td>
    <td>詳細:<%= task.detail %></td>
    <%= link_to '詳細', task_path(task.id) %>
    <%= link_to '編集', edit_task_path(task.id) %>
    <%= link_to '削除', task_path(task.id), method: :delete, data: {confirm: '本当に削除しますか?'} %>
<% end %>
</ul>

<%= link_to '新規タスク', new_task_path %>
